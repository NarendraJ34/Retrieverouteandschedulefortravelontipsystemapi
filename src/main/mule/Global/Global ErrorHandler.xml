				<ee:message>
					<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{

"Message": " Http Connectivity Error"	
 	
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
		</on-error-propagate>
		<on-error-propagate type="APIKIT:BAD_REQUEST">
